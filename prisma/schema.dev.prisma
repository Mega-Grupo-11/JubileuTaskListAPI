generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL_DEV")
}

model Usuario {
  id           Int       @id @default(autoincrement())
  nome         String
  email        String    @unique
  passwordHash String
  resetToken    String?  
  tokenExpires  DateTime?
  createdAt    DateTime  @default(now())
  tarefas      Tarefa[]
}

model Tarefa {
  id           Int       @id @default(autoincrement())
  titulo       String
  descricao    String?
  dataPrevista DateTime
  prioridade   Prioridade 
  status       Boolean
  createdAt    DateTime  @default(now())
  usuario      Usuario   @relation(fields: [usuarioId], references: [id])
  usuarioId    Int
}

enum Prioridade {
  BAIXA 
  MEDIA 
  ALTA 
}
