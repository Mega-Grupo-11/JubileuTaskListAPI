{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",  
    "rootDir": "./src",
    "baseUrl": ".",  
    "typeRoots": [
      "./node_modules/@types", 
      "./types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
